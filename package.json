{
  "name": "ddd-pe-boilerplate",
  "version": "0.0.1",
  "description": "Example integration of MikroORM into express (in typescript)",
  "author": "Brian Ezequiel Fiszman",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "daemon": "nest build --webpack --webpackPath webpack-hmr.config.js",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./__test__/jest-e2e.json"
  },
  "dependencies": {
    "@mikro-orm/core": "^4.2.3",
    "@mikro-orm/mongo-highlighter": "^1.0.0",
    "@mikro-orm/mongodb": "^4.2.3",
    "@mikro-orm/nestjs": "^4.2.0",
    "@nestjs/common": "^7.4.4",
    "@nestjs/core": "^7.4.4",
    "@nestjs/platform-express": "^7.4.4",
    "@types/faker": "^5.1.4",
    "@types/morgan": "^1.9.2",
    "@types/uuidv4": "^5.0.0",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.12.2",
    "dotenv": "^8.2.0",
    "faker": "^5.1.0",
    "morgan": "^1.10.0",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.3",
    "start-server-webpack-plugin": "^2.2.5",
    "tsc-watch": "^4.2.9",
    "uuidv4": "^6.2.5"
  },
  "devDependencies": {
    "@mikro-orm/cli": "^4.2.3",
    "@nestjs/cli": "^7.5.1",
    "@nestjs/schematics": "^7.1.2",
    "@nestjs/testing": "^7.5.1",
    "@types/express": "^4.17.8",
    "@types/express-promise-router": "^3.0.0",
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.6",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.6.0",
    "@typescript-eslint/parser": "^4.6.0",
    "eslint": "^7.12.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.1.4",
    "jest": "^26.6.1",
    "prettier": "^2.1.2",
    "prettier-eslint": "^11.0.0",
    "supertest": "^6.0.1",
    "ts-jest": "^26.4.3",
    "ts-loader": "^8.0.7",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.5"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./src/infrastructure/database/mikro-orm.config.ts",
      "./dist/infrastructure/database/mikro-orm.config.js"
    ]
  }
}
